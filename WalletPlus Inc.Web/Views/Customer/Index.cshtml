@model List<Customer>


<h1>Customers</h1>

<form>

</form>

<div class="row"><a asp-action="Create" asp-controller="Customer" class="col-2 m-2 btn-success">Create Customer</a></div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Gender</th>
                <th>MaritalStatus</th>
                <th>DateOfBirth</th>
                <th>Country</th>
                <th>State</th>
                <th>City</th>
                <th width="40px">Action</th>
                
             </tr>
        </thead>
        <tbody>
            @foreach(var customer in Model)
            {
                <tr>
                    <td>@customer.FirstName @customer.LastName @customer.MiddleName</td>
                @*<td>@customer.LastName</td>
                <td>@customer.MiddleName</td>*@
                    
                    <td>@customer.Gender</td>
                    <td>@customer.MaritalStatus</td>
                    <td>@customer.DateOfBirth.ToString("dd MMMM, yyyy")</td>
                    <td>@customer.Country</td>
                    <td>@customer.State</td>
                    <td>@customer.City</td>
                    
                    <td width="150px">
                        <a asp-action="Edit" asp-controller="Customer" asp-route-id="@customer.Id" class="btn btn-primary btn-sm"><i class="fa fa-edit"></i> Edit</a>
                        <a asp-action="Delete" asp-controller="Customer" asp-route-id="@customer.Id" onclick="return confirm('Are you sure you want to delete?')" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i> Delete</a>
                     </td>
                </tr>
             }